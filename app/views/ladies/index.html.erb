<p id="notice"><%= notice %></p>

<h1>Ladies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ladies.each do |lady| %>
      <tr>
        <td><%= lady.name %></td>
        <td><%= link_to 'Show', lady %></td>
        <td><%= link_to 'Edit', edit_lady_path(lady) %></td>
        <td><%= link_to 'Destroy', lady, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lady', new_lady_path %>
